		<!-- Start Align Area -->
		<div class="whole-wrap">
			<div class="container box_1170">

				<div class="section-top-border">
					<div
						class="row">
						{# 左側 #}
						<div class="col-lg-8 col-md-8">
							<h3 class="mb-30">{{userInfo.user_name}}さんのプロフィール</h3>
							<form action="#">
								<div class="bg-light border p-3">
									<p class="text-center">現在のユーザー名</p>
									<p class="text-center">{{userInfo.user_name}}</p>
									<p class="text-center">新しいユーザー名</p>
									<input class="d-block mx-auto" type="text" size="30" name="" id=""><br>
									<input class="boxed-btn4 d-block mx-auto" type="submit" value="ユーザー名を変更する">
								</div>
								<div class="bg-light border p-3 mt-10">
									<p class="text-center">現在のメールアドレス</p>
									<p class="text-center">{{userInfo.email}}</p>
									<p class="text-center">新しいメールアドレス</p>
									<input class="d-block mx-auto" type="mail" size="30" name="" id=""><br>
									<input class="boxed-btn4 d-block mx-auto" type="submit" value="メールアドレスを変更する">
								</div>
								<div class="bg-light border p-3 mt-10">
									<p class="text-center">生年月日</p>
									<p class="text-center">{{userInfo.year}}年{{userInfo.month}}月{{userInfo.day}}日</p>
								</div>
								<div class="bg-light border p-3 mt-10">
									<p class="text-center">現在のパスワード</p>
									<input class="d-block mx-auto" type="password" size="30" name="" id=""><br>
									<p class="text-center">新しいパスワード</p>
									<input class="d-block mx-auto" type="password" size="30" name="" id=""><br>
									<input class="boxed-btn4 d-block mx-auto" type="submit" value="パスワードを変更する">
								</div>
							</form>
							<form action="profile.php" method="post">
								<input type="submit" class="boxed-btn4 d-block mt-10" value="ログアウト" name="send">
							</form>
						</div>
						{# 右側のエリア #}
						<div class="col-lg-3 col-md-4 mt-sm-30">
							{% include "profile_right_menu.twig" %}
						</div>
					</div>
				</div>
			</div>
